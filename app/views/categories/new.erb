<h1>NEW</h1>

<p><%= @category.inspect %></p>

<%= form_with scope: :category , url: categories_path, local: true do |form| %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :url %><br>
    <%= form.text_area :url %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>