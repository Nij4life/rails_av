<h3>Create new task</h3>

<%= form_with model: [@category, @category.task.build], local: true do |form| %>
  <p>
    <%= form.label :url_type %><br>
    <%= form.text_field :url_type %>
  </p>
  <p><%= form.check_box :recursive %></p>
  <p><%= form.check_box :skip_products %></p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', categories_path %>